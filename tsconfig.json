{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/features/*": ["./features/*"],
      "@/features/shared/*": ["./features/shared/*"],
      "@/features/shared/ui/*": ["./features/shared/ui/*"],
      "@/features/shared/utils/*": ["./features/shared/utils/*"],
      "@/features/shared/utils/utils": ["./features/shared/utils/utils.ts"],
      "@/features/shared/layout/*": ["./features/shared/layout/*"],
      "@/features/shared/hooks/*": ["./features/shared/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
